@model UserProfile

@{
    ViewData["Title"] = $"{Model.FullName} – Profile";

    // Create sample profiles using object constructors
    var otherProfiles = new List<UserProfile>
    {
        new UserProfile
        {
            UserProfileId = 2,
            FullName = "Jane Smith",
            Email = "jane.smith@example.com",
            PhoneNumber = "555-123-4567",
            ImageUrl = "/images/jane.jpg",
            GitHubUrl = "https://github.com/janesmith",
            SkilledLanguages = new List<string> { "C#", "JavaScript", "SQL" }
        },
        new UserProfile
        {
            UserProfileId = 3,
            FullName = "Michael Brown",
            Email = "michael.brown@example.com",
            PhoneNumber = "555-987-6543",
            ImageUrl = "/images/michael.jpg",
            GitHubUrl = "https://github.com/michaelbrown",
            SkilledLanguages = new List<string> { "Python", "Go", "Rust" }
        },
        new UserProfile
        {
            UserProfileId = 4,
            FullName = "Sarah Johnson",
            Email = "sarah.j@example.com",
            PhoneNumber = "555-222-3333",
            ImageUrl = "/images/sarah.jpg",
            GitHubUrl = "https://github.com/sarahjohnson",
            SkilledLanguages = new List<string> { "Java", "Kotlin", "Swift" }
        }
    };
}

<h1 class="text-center">Profile Page</h1>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Profile Overview</h3>
                </div>

                <div class="card-body">

                    <div class="text-center mb-4">
                        <img src="@Model.ImageUrl"
                             alt="Headshot for @Model.FullName"
                             class="rounded-circle img-thumbnail"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                        <h4 class="mt-3">@Model.FullName</h4>
                        <p class="text-muted mb-0">@Model.Email</p>
                        <p class="mb-0">
                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                @Model.PhoneNumber
                            </a>
                        </p>
                    </div>

                    <hr />

                    <dl class="row mb-0">
                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(m => m.UserProfileId)
                        </dt>
                        <dd class="col-sm-9">
                            @Model.UserProfileId
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(m => m.GitHubUrl)
                        </dt>
                        <dd class="col-sm-9">
                            <a href="@Model.GitHubUrl"
                               target="_blank"
                               rel="noopener noreferrer"
                               class="link-primary">
                                @Model.GitHubUrl
                            </a>
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            Skilled Languages
                        </dt>
                        <dd class="col-sm-9">
                            <ul class="list-group list-group-flush">
                                @foreach (var languageSkill in Model.SkilledLanguages)
                                {
                                    <li class="list-group-item px-0">
                                        <i class="bi bi-code-slash me-2"></i>@languageSkill
                                    </li>
                                }
                            </ul>
                        </dd>
                    </dl>

                </div>
            </div>

            <!-- Scrollable Profiles Section -->
            <h3 class="mt-5 mb-3 text-center">Other Profiles</h3>

            <div class="profile-scroll-container">
                <div class="profile-list">
                    @foreach (var p in otherProfiles)
                    {
                        <div class="card profile-card shadow-sm">
                            <div class="card-body text-center">
                                <img src="@p.ImageUrl"
                                     class="rounded-circle img-thumbnail mb-2"
                                     style="width: 100px; height: 100px; object-fit: cover;" />

                                <h5 class="mb-1">@p.FullName</h5>
                                <p class="text-muted mb-1">@p.Email</p>


                                <a href="/UserProfile/Details/@p.UserProfileId"
                                   class="btn btn-sm btn-primary mt-2">
                                    View Profile
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /*Phone Number Styling*/
    a[href="tel:@Model.PhoneNumber"] {
        color: black;
        text-decoration: none;
    }

    a[href="tel:@Model.PhoneNumber"]:hover {
        color: blue;
    }
    /* Default: horizontal scroll + wrapping */

    .profile-scroll-container {
        max-width: 100%;
        overflow-x: auto;
        overflow-y: hidden;
        padding-bottom: 10px;
    }

    .profile-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .profile-card {
        min-width: 250px;
        flex: 1 1 250px;
    }

    /* THIN SCREENS: switch to vertical scroll */
    @@media (max-width: 576px) {
        .profile-scroll-container {
            overflow-x: hidden;
            overflow-y: auto;
            max-height: 80vh;
        }

        .profile-list {
            flex-direction: column;
            flex-wrap: nowrap;
        }

        .profile-card {
            width: 100%;
            min-width: unset;
        }
    }
</style>